<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cardView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageView
			android:id="@+id/ponto_inspecao_background"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:background="@android:color/white"
			android:contentDescription="Background"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"

			/>
		<ImageView
			android:id="@+id/ponto_inspecao_barra_status"
			android:layout_width="10dp"
			android:layout_height="0dp"
			android:background="@android:color/holo_orange_dark"
			android:contentDescription="Barra Status"
			app:layout_constraintBottom_toBottomOf="@id/ponto_inspecao_background"
			app:layout_constraintEnd_toEndOf="@id/ponto_inspecao_background"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="@id/ponto_inspecao_background"
			app:layout_constraintTop_toTopOf="@id/ponto_inspecao_background"
			/>
		<TextView
			android:id="@+id/ponto_inspecao_componente"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="24dp"
			android:layout_marginLeft="24dp"
			android:textColor="@android:color/black"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/ponto_inspecao_barra_status"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Equipamento"
			 />
		<ImageView
			android:id="@+id/ponto_inspecao_foto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			android:contentDescription="Icone da Camera"
			app:layout_constraintBottom_toBottomOf="@id/ponto_inspecao_background"
			app:layout_constraintEnd_toEndOf="@id/ponto_inspecao_background"
			app:layout_constraintTop_toTopOf="@id/ponto_inspecao_background"
			app:srcCompat="@drawable/ic_foto"
			tools:ignore="VectorDrawableCompat" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>